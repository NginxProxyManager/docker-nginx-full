#!/bin/bash -e

BLUE='\E[1;34m'
CYAN='\E[1;36m'
YELLOW='\E[1;33m'
GREEN='\E[1;32m'
RESET='\E[0m'

echo -e "${BLUE}‚ùØ ${CYAN}Building ModSecurity ${YELLOW}V3${RESET}"

cd /tmp
git clone https://github.com/owasp-modsecurity/ModSecurity --depth 1 --branch v3/master
cd ModSecurity
sh build.sh
git submodule init
git submodule update
./configure
make
make install

cd /tmp
git clone https://github.com/owasp-modsecurity/ModSecurity-nginx --depth 1 --branch master
